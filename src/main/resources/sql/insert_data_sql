INSERT INTO roles (id, description, title)
       SELECT 1, 'Роль пользователя', 'USER'
       WHERE NOT EXISTS (SELECT 1 FROM roles WHERE id = 1)
       UNION ALL
       SELECT 2, 'Роль учителя', 'TEACHER'
       WHERE NOT EXISTS (SELECT 1 FROM roles WHERE id = 2);



